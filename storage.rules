rules_version = '2';
service firebase.storage {
  match /b/{bucket}/o {
    function isSignedIn() { return request.auth != null; }
    // Car images: cars/{uid}/{listingId}/{filename}
    match /cars/{uid}/{listingId}/{filename} {
      allow read: if true;
      allow write: if isSignedIn() && request.auth.uid == uid;
    }
  }
}
